########################################
# PLANTILLA DE CONFIGURACIÓN (.env.example)
# Copia este archivo como `.env` y completa los valores sensibles.
########################################

# ====================================
# CONFIGURACIÓN DE MONGO DB
# ====================================
MONGO_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/edf_catalogotablas
MONGO_DB=edf_catalogotablas
MONGODB_DB=edf_catalogotablas

# ====================================
# CONFIGURACIÓN DE AWS S3
# ====================================
AWS_ACCESS_KEY_ID=tu_clave_de_acceso
AWS_SECRET_ACCESS_KEY=tu_clave_secreta
AWS_REGION=eu-central-1
S3_BUCKET_NAME=edf-catalogo-tablas
USE_S3=true

# ====================================
# CONFIGURACIÓN DE BREVO (API DE EMAIL)
# ====================================
BREVO_API_KEY=tu_api_key
BREVO_SMTP_USERNAME=tu_usuario_brevo
BREVO_SMTP_PASSWORD=tu_contraseña_brevo

# ====================================
# EMAILS DE NOTIFICACIÓN
# ====================================
NOTIFICATION_EMAIL_1=correo@ejemplo.com

# ====================================
# VARIABLES OPCIONALES DE ENTORNO
# ====================================
APP_ENV=development
LOG_LEVEL=debug
